
@{
    ViewBag.Title = "Period Grades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/Site.css" rel="stylesheet" />+

<style>
    .modal-backdrop {
        z-index:-1 !important;
    }
</style>


<input type="hidden" id="hvPeriodGradeId" />
<input type="hidden" id="hvPeriodId" value="@ViewBag.PeriodId" />



<div class="modal fade" id="add-group">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Groups</h4>
            </div>
            <div class="modal-body">
                <form id="form-save-group">
                    <div id="addGroupHtml">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button onclick="saveGroup();" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="add-grade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Grade</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button onclick="saveGrade();" type="button" class="btn btn-primary">Save Grades</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>Grade Configuration <small>Admin Configure the Period Grades</small></h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <form id="form-save-grade">
                <div id="addGradeHtml">

                </div>
            </form>
        </div>
        <div class="col-md-10">
            <div class="box">
                <!--BOX HEADER-->
                <div class="box-header">
                    <!--BOX TITLE-->
                    <div class="box-title pull-left">
                        <p><i class="fa fa-list fa-lg"></i></p>
                        <p>Period Grades</p>
                    </div>
                    <!--end: TITLE-->
                    <!--ICONS - FUNCTIONAL-->
                    @*<div class="box-icon pull-right">
                    <a href="#" class="btn-help" title="Help" role="button"><i class="fa fa-question-circle fa-lg"></i></a>
                    <a href="#" class="btn-minimize" title="Expand / Collapse" role="button"><i class="fa fa-chevron-up fa-lg"></i></a>
                </div>*@
                    <!--end: ICONS-->
                </div>
                <!--end: BOX HEADER-->
                <!--BOX CONTENT-->
                <div class="box-content">
                    <div class="panel-group" id="_periodGradeAccordion" role="tablist" aria-multiselectable="true">
                    </div>
                </div>
            </div> <!--end: BOX CONTENT-->

           
        </div>
    </div>    
</div>


