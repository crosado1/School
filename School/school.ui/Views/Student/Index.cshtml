<script src="~/Scripts/slimscroll/slimscroll.min.js"></script>
<script src="~/Scripts/views/student/search.js"></script>
<script src="~/Scripts/views/payTransaction/pay.js"></script>   
<script src="~/Scripts/views/student/create.js"></script>
<script src="~/Scripts/views/student/profile.js"></script>    
     }


